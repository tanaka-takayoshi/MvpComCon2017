<Window xmlns="https://github.com/avaloniaui" MinWidth="500" MinHeight="300"
        xmlns:vm="clr-namespace:ChatApp.AvaloniaCore.ViewModels;assembly=ChatApp.AvaloniaCore"
        xmlns:local="clr-namespace:ChatApp.AvaloniaCore;assembly=ChatApp.AvaloniaCore">
    <Window.Styles>
        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Styles>

    <StackPanel Orientation="Vertical" Gap="4">
        <StackPanel Orientation="Horizontal" Gap="8">
            <TextBox AcceptsReturn="True" TextWrapping="Wrap" Width="200" Height="125"
                    Text="{Binding SendMessage}"/>
            <Button Command="{Binding SendCommand}">
                Send
            </Button>
    </StackPanel>
    <ListBox Items="{Binding Items}">
        <ListBox.ItemTemplate>
            <DataTemplate DataType="vm:MessageItem">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding Email}"/>
                    <TextBlock Text="{Binding Message}"/>
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </StackPanel>
</Window>